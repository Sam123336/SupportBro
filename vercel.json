{
  "version": 2,
  "name": "support-ticket-system",
  "builds": [
    {
      "src": "support-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "support-ticket-system/src/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/support-ticket-system/src/server.js"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "/support-ticket-system/src/server.js"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot))",
      "dest": "/support-frontend/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/support-frontend/build/index.html"
    }
  ],
  "outputDirectory": "support-frontend/build",
  "framework": "create-react-app",
  "installCommand": "cd support-frontend && npm install && cd ../support-ticket-system && npm install",
  "buildCommand": "cd support-frontend && npm run build",
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "support-ticket-system/src/server.js": {
      "maxDuration": 30
    }
  }
}
